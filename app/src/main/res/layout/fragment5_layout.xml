<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="16dp"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/container_workout_a"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:onClick="startYoutube"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="125dp"
                    android:layout_height="75dp"
                    android:background="@drawable/workout_a_thumbnail"

                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="@string/li_workout_a"
                    android:textSize="20sp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/container_workout_b"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:onClick="startYoutube"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="125dp"
                    android:layout_height="75dp"
                    android:background="@drawable/workout_b_thumbnail"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/li_workout_b"
                    android:layout_marginLeft="10dp"
                    android:textSize="20sp"
                    />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>